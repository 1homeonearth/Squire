# .env.sample — place this at the project root (next to package.json and src/)
# Copy to .env for local dev OR inject via systemd EnvironmentFile in prod.
# Never commit real secrets.

# Runtime
NODE_ENV=production

# —— Internal MCP bridge API (localhost-only) ——————————————
# Enable the localhost control API that the MCP bridge will call.
SQUIRE_INTERNAL_API_ENABLE=true

# Host:Port to bind on MCS; keep it loopback-only.
SQUIRE_INTERNAL_API_BIND=127.0.0.1:4011

# Shared secret used by the MCP bridge (Bearer token). Use a strong random value.
# Example generator: `openssl rand -hex 24`
SQUIRE_INTERNAL_API_TOKEN=REPLACE_WITH_RANDOM_SECRET

# Optional allowlist of Discord channel IDs this API may touch (comma-separated).
# Leave empty during dev; set for production hardening.
# SQUIRE_INTERNAL_API_ALLOW=123456789012345678,987654321098765432
